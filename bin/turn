#!/usr/bin/env ruby
require_relative '../lib/turn.rb'
board = []
9.times { board << " "}

puts "Welcome to Tic Tac Toe!"
display_board(board)
turn(board)

def turn(board)
  puts "Please enter 1-9:"
  input = gets.strip
  index = input_to_index(input)
  if valid_move?(board, index)
    move(board, index)
  else
    puts "Invalid input."
    turn(board)
  end
end

def input_to_index(user_input)
  user_input.strip.to_i - 1
end
