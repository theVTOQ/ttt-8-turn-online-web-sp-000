#!/usr/bin/env ruby
require_relative '../lib/turn.rb'
board = []
9.times { board << " "}

puts "Welcome to Tic Tac Toe!"
display_board(board)
turn(board)

def turn(board)
  puts "Please enter 1-9:"
  input = gets.strip
  index = input.to_i
  if valid_move?(index)
    move(board, index)
  else
    puts "Invalid input."
    turn(board)
  end
end
